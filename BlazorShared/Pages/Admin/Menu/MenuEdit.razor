                        </MCol>
                        <MCol Cols="12"
                          Sm="6"
                          Md="6">
                            <MTextField  @bind-Value="SelectData.Component"
                                    Label="组件路径"></MTextField>
                        </MCol>
                        <MCol Cols="12"
                          Sm="6"
                          Md="6">
                            <MTextField  @bind-Value="SelectData.Icon"
                                    Label="菜单图标"></MTextField>
                        </MCol>
                        <MCol Cols="12"
                          Sm="6"
                          Md="6">
                            <MTextField  @bind-Value="SelectData.Redirect"
                                    Label="重定向"></MTextField>
                        </MCol>
                        <MCol Cols="12"
                          Sm="6"
