@using System.Reflection;
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using XT.Common.Config
@using Pages
@using Components
@using Layout;
@using BlazorXT.Data.Base
@inject NavigationManager NavigationManager

    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="Global.Assemblies">
        <Found Context="routeData">
            <AuthorizeRouteView Resource="@routeData" RouteData="@routeData" DefaultLayout="typeof(BaseLayout)">

                <NotAuthorized>
                  
                        
                            <BlazorXT.Pages.Login></BlazorXT.Pages.Login>
                        
                    
                </NotAuthorized>
            </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
           
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(BaseLayout)">
                <BlazorXT.Components.NotFound404></BlazorXT.Components.NotFound404>
            </LayoutView>
        </NotFound>
      
    </Router>

@code {
    [Inject]
    BlazorXT.Data.Base.GlobalVariables Global{ get; set; }
    

}