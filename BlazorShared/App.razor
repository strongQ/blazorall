@using System.Reflection;
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using GeneralCommon.Config
@using Pages
@using Components
@using Layout;
@using BlazorShared.Data.Base
@inject NavigationManager NavigationManager
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="Global.Assemblies">
        <Found Context="routeData">
            <AuthorizeRouteView Resource="@routeData" RouteData="@routeData" DefaultLayout="typeof(BaseLayout)">
                <NotAuthorized>
                  
                        
                            <BlazorShared.Pages.Login></BlazorShared.Pages.Login>
                        
                    
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(BaseLayout)">
                <BlazorShared.Components.NotFound404></BlazorShared.Components.NotFound404>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
@code {
    [Inject]
    BlazorShared.Data.Base.GlobalVariables Global{ get; set; }
    

}